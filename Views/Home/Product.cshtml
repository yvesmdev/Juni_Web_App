@{
	ViewData["Title"] = "Achat sur l'Appli Mobile - "+ViewBag.Product.Name+" à $"+ViewBag.Product.Price;
	ViewBag.IsProduct = true;
}

<!--================Single Product Area =================-->
<div class="product_image_area" style="margin-top:-30px;">
	<div class="container">
		<div class="row s_product_inner">
			<div class="col-lg-6">
				<div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
					<div class="carousel-inner">
						<div class="carousel-item active">
							<img class="d-block w-100" src="~/img/product/women_pringle_blue_sky_dress_1.jpeg" alt="First slide">
						</div>
						<div class="carousel-item">
							<img class="d-block w-100" src="~/img/product/women_pringle_blue_sky_dress_2.jpeg" alt="Second slide">
						</div>
						<div class="carousel-item">
							<img class="d-block w-100" src="~/img/product/women_pringle_blue_sky_dress_3.jpeg" alt="Third slide">
						</div>
					</div>
				</div>
			</div>
			<div class="col-lg-5 offset-lg-1">
				<div class="s_product_text">
					<h3>@ViewBag.Product.Name</h3>
					<h2>$@ViewBag.Product.Price</h2>
					<ul class="list">
						<li><a class="active" href="#"><span>Categorie</span> : Household</a></li>
						<li><a href="#"><span>Disponible</span> : En Stock</a></li>
					</ul>
					<p>
						@ViewBag.Product.Description
					</p>
					<div class="product_count">
						<label for="qty">Quantity: @ViewBag.Product.Qty </label>
						<a class="button primary-btn" href="#">Acheter sur l'Appli Mobile</a>
					</div>
				
				</div>
			</div>
		</div>
	</div>
</div>
<!--================End Single Product Area =================-->
