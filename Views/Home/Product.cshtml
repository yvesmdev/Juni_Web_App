@{
	ViewData["Title"] = "Achat sur l'Appli Mobile - "+ViewBag.Product.Name+" à $"+ViewBag.Product.Price;
	ViewBag.IsProduct = true;
}

<!--================Single Product Area =================-->
<div class="product_image_area" style="margin-top:-30px;">
	<div class="container">
		<div class="row s_product_inner">
			<div class="col-lg-6">
				<div id="carouselExample" class="carousel slide" data-ride="carousel">
					<div class="carousel-inner">
						<div class="carousel-item active">
							<img class="d-block w-100" src="~/img/product/@ViewBag.Product.PreviewImagePaths[0]" alt="First slide">
						</div>
						<div class="carousel-item">
							<img class="d-block w-100" src="~/img/product/@ViewBag.Product.PreviewImagePaths[1]" alt="Second slide">
						</div>
						<div class="carousel-item">
							<img class="d-block w-100" src="~/img/product/@ViewBag.Product.PreviewImagePaths[2]" alt="Third slide">
						</div>
					</div>

					<!-- Navigation Icons -->
					<a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>
			<div class="col-lg-5 offset-lg-1">
				<div class="s_product_text">
					<h3>@ViewBag.Product.Name</h3>
					<h2>$@ViewBag.Product.Price</h2>
					<ul class="list" style="margin-top:10px;">
						<li><a class="active" href="#"><span>Categorie</span> : Household</a></li>
						<li><a href="#"><span>Disponible</span> : En Stock</a></li>
					</ul>
					<p>
						@ViewBag.Product.Description
					</p>
					<div class="product_count" style="margin-top:10px;">
						<label for="qty">Quantity: @ViewBag.Product.Qty </label>
						<a class="button primary-btn" href="#" style="color:darkorange;">Acheter sur l'Appli Mobile</a>
					</div>
				
				</div>
			</div>
		</div>
	</div>
</div>
<!--================End Single Product Area =================-->
