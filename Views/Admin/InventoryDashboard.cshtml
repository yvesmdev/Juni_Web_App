    function handleFileInputChange(input) {
        var fileInput = input;
        var grid = document.getElementById('imageGrid');

        //alert(fileInput.files[0].name);
        // Clear previous previews
        //grid.innerHTML = '';

        // Check and preview the selected images in the grid
        for (var i = 0; i < fileInput.files.length; i++) {
            var file = fileInput.files[i];            
            if (file) {
                // Check if the file size is within the allowed limit (5 MB)
                if (file.size > 5 * 1024 * 1024) {
                    alert("File size exceeds the maximum limit (5 MB). Please choose a smaller file.");
                    // Clear the file input
                    fileInput.value = '';
                    return;
                }

                
                var reader = new FileReader();
                reader.onload = function (e) {
                    var imgContainer = document.createElement('div');
                    imgContainer.className = 'col-md-4';
                    var tempId = input.id + "_disp";
                    //imgContainer.id = input.id+"_disp";
                    imgContainer.innerHTML = '<img src="' + e.target.result + '" class="img-fluid" alt="Image ' + (i + 1) + '">';
                    
                    var tmpImgContainer = document.getElementById(tempId);
                    imgContainer.id = tempId;


                    
                                        
                    //alert(tmpImgContainer);
                    //input.value = file.name;
                    if(tmpImgContainer == null){//add element in new field if it does exist already
                        grid.appendChild(imgContainer);
                    }else{
                        grid.replaceChild(imgContainer,tmpImgContainer);
                    }
                };
                reader.readAsDataURL(file);
            }
        }
    }

    function cancelForm() {
        document.getElementById('productActualForm').reset();
        $("#imageGrid").empty();
    }

    function cancelShowForm() {
        document.getElementById('productShowActualForm').reset();
        $("#showImageGrid").empty();
    }

    function openProductModal(productId, productName, productPrice, productQty, productDescription, productCategory) {
        // Populate the form with the passed parameters
        $('#productShowName').val(productName);
        $('#productShowPrice').val(productPrice);
        $('#productShowQuantity').val(productQty);
        $('#productShowCategory').val(productCategory);
        $('#productShowDescription').val(productDescription);
        $('#productShowHiddenProductId').val(productId);
        
     
        var element = document.getElementById("see_button_"+productId);
        var myArray = JSON.parse(element.getAttribute('image-path-array'));        
        var grid = document.getElementById('showImageGrid');
        grid.innerHTML = '';//clear div
               
        for(var i=0; i < myArray.length;i++){
            var imgContainer = document.createElement('div');
            imgContainer.className = 'col-md-4';
            var imagePath = myArray[i];            
            imgContainer.innerHTML = '<img src="/' + imagePath + '" class="img-fluid" alt="Image ' + (i + 1) + '">';
            imgContainer.id = 'showImage'+(i+1)+'_disp';
            grid.appendChild(imgContainer);
        }

        // Show the modal
        $('#productShowForm').collapse('show');
    }

    function handleShowFileInputChange(input) {
        var fileInput = input;
        var grid = document.getElementById('showImageGrid');

        //alert(fileInput.files[0].name);
        // Clear previous previews
        //grid.innerHTML = '';

        // Check and preview the selected images in the grid
        for (var i = 0; i < fileInput.files.length; i++) {
            var file = fileInput.files[i];
            if (file) {
                // Check if the file size is within the allowed limit (5 MB)
                if (file.size > 5 * 1024 * 1024) {
                    alert("File size exceeds the maximum limit (5 MB). Please choose a smaller file.");
                    // Clear the file input
                    fileInput.value = '';
                    return;
                }


                var reader = new FileReader();
                reader.onload = function (e) {
                    var imgContainer = document.createElement('div');
                    imgContainer.className = 'col-md-4';
                    var tempId = input.id + "_disp";
                    //imgContainer.id = input.id+"_disp";
                    imgContainer.innerHTML = '<img src="' + e.target.result + '" class="img-fluid" alt="Image ' + (i + 1) + '">';

                    var tmpImgContainer = document.getElementById(tempId);
                    imgContainer.id = tempId;

                    //inform the server that a new file is being uploaded
                    var hiddenInput = document.getElementById(input.id + '_upload');
                    if (hiddenInput == null) {
                        hiddenInput = document.createElement('input');
                        hiddenInput.type = 'hidden';
                        hiddenInput.id = input.id + '_upload';
                        hiddenInput.name = hiddenInput.id;
                        hiddenInput.value = file.name;//load file name
                        document.getElementById('productShowActualForm').appendChild(hiddenInput);
                    }

                    //alert(tmpImgContainer);
                    //input.value = file.name;
                    if (tmpImgContainer == null) {//add element in new field if it does exist already
                        grid.appendChild(imgContainer);
                    } else {
                        grid.replaceChild(imgContainer, tmpImgContainer);
                    }
                };
                reader.readAsDataURL(file);
            }
        }
    }
   </script>
