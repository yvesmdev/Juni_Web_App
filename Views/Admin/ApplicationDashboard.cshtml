<script type="text/javascript">
    $(document).ready(function () {
        $('#bootstrap-data-table-export').DataTable();
    });

    function openProductModal(id, name,  cell, email, street_address, suburb, municipality, city, province, approval, date,path) {

        
        // Populate the form with the passed parameters
        $('#appId').text(" " + id);
        $('#appDate').text(" " + date);
        $('#appCell').text(" " + cell);
        $('#appName').text(" " + name);        
        $('#appStreetAddress').text(" " + street_address);
        $('#appSuburb').text(" " + suburb);
        $('#appIdentity').attr("href","/"+path);
        $('#appMunicipality').text(" " + municipality);
        $('#appProvince').text(" " + province);  

        if(approval.toLowerCase()=="true"){
            $('#appStatus').text("Approuvé");
        }else{
            $('#appStatus').text("En Attente");
        }        
         

        if (approval.toLowerCase() == "true") {
            $('#applicationForm').hide();
        }else{
            $("#applicationId").val(id+"");
            $('#applicationForm').show();
        }

        var element = document.getElementById("see_button_" + id)
       
        $('#orderPanel').collapse('show');
    }


    function submitForm() {
        // Get the form element
        var form = document.getElementById("applicationForm");

        // Submit the form
        form.submit();
    }

</script>