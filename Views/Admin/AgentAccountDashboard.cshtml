                <li>
                    <a href="@Url.Action("SalesDashboard","Admin")"><i class="menu-icon fa fa-money"></i>Tableau de Vente</a>
                </li>
                <li >
                    <a href="@Url.Action("InventoryDashboard","Admin")"><i class="menu-icon fa fa-laptop"></i>Inventaire</a>
                </li>
                <li>
                    <a href="@Url.Action("OrderDashboard","Admin")"><i class="menu-icon fa fa-shopping-cart"></i>Commande</a>
