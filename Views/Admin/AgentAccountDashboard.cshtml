<script type="text/javascript">
    $(document).ready(function () {
        $('#bootstrap-data-table-export').DataTable();
    });
       
    function openProductModal(id,clientId,clientName,clientSurname, clientType,clientEmail ) {
        // Populate the form with the passed parameters
        $('#clientId').text(" "+clientId);
        $('#clientName').text(" "+clientName);
        $('#clientSurname').text(" "+clientSurname);
        $('#clientType').text(" "+clientType);
        $('#clientEmail').text(" "+clientEmail);

        var element = document.getElementById("see_button_"+id)        
        $('#clientPanel').collapse('show');    
    
    }
</script>
